<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/bg_content">
    <Button android:layout_width="260dp" android:layout_height="60dp" android:text="发送向导" android:id="@+id/button_guide"
            android:onClick="onItemClick" android:background="@drawable/main_button"
            android:layout_alignParentLeft="true" android:layout_marginLeft="30dp" android:layout_alignParentTop="true"
            android:layout_marginTop="40dp" android:textColor="#ffffff" android:textStyle="bold"
            android:textSize="25dp" android:layout_gravity="left|center_vertical"/>
    <Button android:layout_width="260dp" android:layout_height="60dp" android:text="发送历史"
            android:id="@+id/button_history" android:onClick="onItemClick" android:background="@drawable/main_button"
            android:textColor="#ffffff" android:textStyle="bold" android:textSize="25dp"
            android:layout_alignLeft="@+id/button_guide" android:layout_below="@+id/button_guide"
            android:layout_centerVertical="true" android:layout_marginTop="40dp" android:layout_gravity="center"/>
    <Button android:layout_width="260dp" android:layout_height="60dp" android:text="修改限额"
            android:id="@+id/button_config" android:onClick="onItemClick" android:background="@drawable/main_button"
            android:textColor="#ffffff" android:textStyle="bold" android:textSize="25dp"
            android:layout_alignLeft="@+id/button_history" android:layout_alignParentTop="false"
            android:layout_marginTop="40dp" android:layout_below="@+id/button_history" android:layout_gravity="center"/>
</LinearLayout>
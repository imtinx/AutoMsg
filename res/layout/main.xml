
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/bg_content" android:gravity="center_vertical">
    <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:background="@drawable/beta"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:id="@+id/start_button" android:layout_gravity="center"
            android:onClick="onItemClick" android:background="@drawable/main_start_button"/>
    <ImageView android:layout_width="260dp" android:layout_height="100dp" android:id="@+id/history_button"
               android:layout_gravity="center" android:onClick="onItemClick"
               android:background="@drawable/main_history_button" android:layout_marginTop="30dp"/>
</LinearLayout>
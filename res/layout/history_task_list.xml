<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/task_config_detail_list_item">
    <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="2013-11"
            android:id="@+id/task_month" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:textSize="25sp" android:textColor="#333" android:textStyle="bold" android:layout_marginLeft="5dp"/>
    <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="扣费 148 元"
            android:id="@+id/task_expenses" android:layout_alignParentRight="true" android:layout_alignTop="@+id/task_month"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/task_month" android:textSize="25sp" android:textColor="#333"
            android:textStyle="bold" android:layout_marginRight="5dp" android:gravity="right"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="需发送200条 已发送200条 已回复200条"
            android:id="@+id/task_result" android:layout_alignLeft="@+id/task_month" android:layout_below="@+id/task_month"
            android:layout_alignRight="@+id/task_expenses" android:gravity="center_horizontal"
            android:textColor="#333" android:textStyle="bold"/>
</RelativeLayout>